<% quantity = order.quantity.to_i %>

<% @product = Product.find_by(id: order.product_id) %>
  <% item_total = @product.price * quantity %>
  <tr>  
  <td>
      <%= image_tag @product.image.tiny %>
      </td>
      <td>
      <h4><%= @product.name %></h4>
      <br>
      <p><%= @product.description %></p>
    </td>

    <td>
      <%= @product.quantity %>  
    </td>
    
    <td>
  
      <%= number_to_currency(item_total) %>
    </td>
  </tr>

